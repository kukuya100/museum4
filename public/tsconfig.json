{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": false,
    "strict": false,
    "noEmit": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "outDir": "./dist",
    "types": ["phaser"]
  },
  "include": ["src/**/*", "types/**/*"]
}
